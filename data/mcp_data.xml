<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default MCP Server Configuration -->
        <record id="mcp_config_server_host" model="ir.config_parameter">
            <field name="key">mcp.server_host</field>
            <field name="value">127.0.0.1</field>
        </record>

        <record id="mcp_config_server_port" model="ir.config_parameter">
            <field name="key">mcp.server_port</field>
            <field name="value">8768</field>
        </record>

        <record id="mcp_config_log_level" model="ir.config_parameter">
            <field name="key">mcp.log_level</field>
            <field name="value">info</field>
        </record>

        <record id="mcp_config_heartbeat_interval" model="ir.config_parameter">
            <field name="key">mcp.heartbeat_interval</field>
            <field name="value">60</field>
        </record>

        <record id="mcp_config_command_timeout" model="ir.config_parameter">
            <field name="key">mcp.command_timeout</field>
            <field name="value">30</field>
        </record>

        <record id="mcp_config_command_max_timeout" model="ir.config_parameter">
            <field name="key">mcp.command_max_timeout</field>
            <field name="value">600</field>
        </record>

        <record id="mcp_config_max_read_size_mb" model="ir.config_parameter">
            <field name="key">mcp.max_read_size_mb</field>
            <field name="value">10</field>
        </record>

        <record id="mcp_config_max_write_size_mb" model="ir.config_parameter">
            <field name="key">mcp.max_write_size_mb</field>
            <field name="value">50</field>
        </record>

        <record id="mcp_config_query_timeout" model="ir.config_parameter">
            <field name="key">mcp.query_timeout</field>
            <field name="value">30</field>
        </record>

        <record id="mcp_config_max_result_rows" model="ir.config_parameter">
            <field name="key">mcp.max_result_rows</field>
            <field name="value">1000</field>
        </record>

        <record id="mcp_config_audit_enabled" model="ir.config_parameter">
            <field name="key">mcp.audit_enabled</field>
            <field name="value">True</field>
        </record>

        <record id="mcp_config_audit_log_path" model="ir.config_parameter">
            <field name="key">mcp.audit_log_path</field>
            <field name="value">/var/log/odoo/mcp_audit.log</field>
        </record>

        <record id="mcp_config_phone_home_retry_count" model="ir.config_parameter">
            <field name="key">mcp.phone_home_retry_count</field>
            <field name="value">3</field>
        </record>

        <record id="mcp_config_phone_home_timeout" model="ir.config_parameter">
            <field name="key">mcp.phone_home_timeout</field>
            <field name="value">5</field>
        </record>
    </data>

    <data noupdate="0">
        <!-- Heartbeat cron - sends periodic pings to registered receiver -->
        <record id="mcp_cron_heartbeat" model="ir.cron">
            <field name="name">MCP: Send Heartbeat</field>
            <field name="active">True</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="model_id" ref="model_mcp_heartbeat"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_heartbeat()</field>
        </record>
    </data>
</odoo>
